---

<aside class="mini-sidebar">
  <a href="/" class="mini-sidebar-photo">
    <img
      class="profile-photo"
      src="/img/Hojoon-Birthday.jpg"
      alt="Hojoon Kim"
      loading="eager"
    />
  </a>

  <ul class="mini-sidebar-links">
    {socialLinks.map((link) => (
      <li>
        <a href={link.href} title={link.title} aria-label={link.title}>
          <i class={link.icon}></i>
        </a>
      </li>
    ))}
  </ul>

  <div class="mini-sidebar-bottom">
    <label class="theme-toggle">
      <input type="checkbox" class="theme-checkbox" />
      <span class="slider"></span>
    </label>
  </div>
</aside>
